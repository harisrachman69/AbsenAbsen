<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#A8ACCB"
    tools:context=".OpeningActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAMPILAN MENU"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Guru"
        android:textSize="22dp"
        android:textStyle="bold"
        android:background="#FF66FA"
        android:onClick="keAdmin"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Siswa"
        android:textSize="22dp"
        android:textStyle="bold"
        android:background="#5264FF"
        android:onClick="keSiswa"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rekapan Data Guru"
        android:textSize="22dp"
        android:background="#FFFFFF"
        android:onClick="terserah"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"/>


</LinearLayout>